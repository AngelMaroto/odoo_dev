<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="vista_filmotecaangel_genero_tree">
      <field name="name">vista_filmotecaangel_genero_tree</field>
      <field name="model">filmotecaangel.genero</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="intriga"/>
          <field name="infantil"/>
          <field name="description"/>
        </tree>
      </field>
    </record>


    <record model="ir.ui.view" id="vista_filmotecaangel_genero_form">
      <field name="name">vista_filmotecaangel_genero_form</field>
      <field name="model">filmotecaangel.genero</field>
      <field name="arch" type="xml">
        <form string="formulario_genero">
        <sheet>
            <group name="group_top">
                <field name="name"/>
                <field name="intriga"/>
                <field name="infantil"/>
                <field name="description"/>
                <field name="peliculas_id"/>
            </group>
        </sheet>
        </form>
      </field>
    </record>


