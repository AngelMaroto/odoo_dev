<odoo>
<data>
        <record id ="view_especialidad_tree" model="ir.ui.view">
            <field name="name">iaangel.especialidad.tree</field>
            <field name="model">iaangel.especialidad</field>
            <field name="arch" type="xml">
                <tree string="Especialidad">
                    <field name="nombre"/>
                </tree>
            </field>
        </record>

        <record id="view_especialidad_form" model="ir.ui.view">
            <field name="name">iaangel.especialidad.form</field>
            <field name="model">iaangel.especialidad</field>
            <field name="arch" type="xml">
                <form string="Especialidad Form">
                    <sheet>
                        <group>
                            <field name="nombre"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_iaangel_especialidad" model="ir.actions.act_window">
            <field name="name">Especialidad</field>
            <field name="res_model">iaangel.especialidad</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_iaangel_especialidad" parent="menu_iaangel_root" action="action_iaangel_especialidad"/>

</data>
</odoo>