<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="vista_filmotecaangel_pelicula_tree">
      <field name="name">vista_filmotecaangel_pelicula_tree</field>
      <field name="model">filmotecaangel.pelicula</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="film_date"/>
          <field name="description"/>
          <field name="is_spanish"/>
          <field name="image"/>
          <field name="language"/>
          <field name="opinion"/>
          <field name="color"/>
          <button name="f_create" string="Crear" class="oe_hightlight" type="object"/>
        </tree>
      </field>
    </record>


    <record model="ir.ui.view" id="vista_filmotecaangel_pelicula_form">
      <field name="name">vista_filmotecaangel_pelicula_form</field>
      <field name="model">filmotecaangel.pelicula</field>
      <field name="arch" type="xml">
        <form string="formulario_peliculas">
          <sheet>
          <div class="oe_button_box" name="button_box">
              <button name="toggle_color" type="object" class="oe_stat_button"
              string="Película color" icon="fa-paint-brush"/>
          </div>
              <group name="group_top">
                  <group name="group_left">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="film_date"/>
                    <field name="description"/>
                    <field name="genero_id"/>
                    <field name="tecnicas_id"/>
                    <field name="is_spanish"/>
                  </group>
                  <group name="group_right">
                    <field name="image"/>
                    <field name="language"/>
                    <field name="opinion"/>
                    <field name="color"/>
                  </group>
              </group>
          </sheet>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="vista_filmotecaangel_pelicula_kanban">
      <field name="name">vista_filmotecaangel_pelicula_kanban</field>
      <field name="model">filmotecaangel.pelicula</field>
      <field name="arch" type="xml">
        <kanban>
          <field name="id"/>
          <field name="name"/>
          <field name="film_date"/>
          <templates>
            <t t-name="kanban-box">
              <div t-attf-class="oe_kanban_global_click">
                <div class="o_kanban_image">
                  <img alt="Cartel"
                    t-att-src="kanban_image('filmotecaangel.pelicula','image', record.id.raw_value)"/>
                </div>
                <div class="o_kanban_details">
                  <strong class="o_kanban_record_title">
                    <field name="name"/>
                  </strong>
                  <div t-if="record.film_date.value">
                    <t t-esc="record.film_date.value"/>
                  </div>
                </div>
              </div>
            </t>
          </templates>         
        </kanban>
      </field>
    </record>



