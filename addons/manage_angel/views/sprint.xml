<odoo>
<data>
    <!--# VISTA TREE-->
    <record id="view_sprint_tree" model="ir.ui.view">
        <field name="name">manage.sprint.tree</field>
        <field name="model">manage.sprint</field>
        <field name="arch" type="xml">
            <tree string="Sprints">
                <field name="name"/>
                <field name="startdate"/>
                <!--
                # Este campo es 'computed' y 'stored' en el modelo.
                # Se muestra como un campo normal.-->
                <field name="enddate"/>
                
                <!--# Many2one: Muestra el nombre del proyecto al que pertenece-->
                <field name="project_id"/>
            </tree>
        </field>
    </record>

    <!--# VISTA FORM-->
    <record id="view_sprint_form" model="ir.ui.view">
        <field name="name">manage.sprint.form</field>
        <field name="model">manage.sprint</field>
        <field name="arch" type="xml">
            <form string="Sprint Form">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="duration"/>
                        <field name="startdate"/>
                        <field name="enddate"/>
                        
                        <!--# SelecciÃ³n del Proyecto Padre-->
                        <field name="project_id"/>
                        
                        <!--# Tabla de Tareas Hijos (One2many)-->
                        <field name="task_ids"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!--# ACTION Y MENU-->
    <record id="action_manage_sprint" model="ir.actions.act_window">
        <field name="name">Sprints</field>
        <field name="res_model">manage.sprint</field>
        <field name="view_mode">tree,form</field>
    </record>
    
    <menuitem id="menu_manage_sprint" parent="menu_manage_root" action="action_manage_sprint"/>

</data>
</odoo>