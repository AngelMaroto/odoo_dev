    <!-- Menu raiz -->

    <menuitem name="Filmoteca de Ángel" id="menu_filmotecaangel_raiz"/>

    <!-- Segundo nivel -->

    <menuitem name="Listado de peliculas" id="menu_filmotecaangel_listado_peliculas" parent="menu_filmotecaangel_raiz"/>

    <!-- actions -->

    <menuitem name="Consultar" id="menu_filmotecaangel_peliculas" parent="menu_filmotecaangel_listado_peliculas"
